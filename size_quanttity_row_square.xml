<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <!-- Actual Row-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="132dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="6dp">

        <!-- ListRow Left sied Thumbnail image -->

        <LinearLayout
            android:id="@+id/sq_image_holder_square"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sq_image_square"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Row 1 - 1 -->
            <LinearLayout
                android:id="@+id/sq_row_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <RelativeLayout
                    android:id="@+id/layout_0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mailpix.samedayphoto.imagesources.SizeQuantityButton
                        android:id="@+id/sq_4x4_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="#00ffffff"
                        android:padding="5dp"
                        android:src="@drawable/plus" />

                    <TextView
                        android:id="@+id/sq_4x4_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_toStartOf="@+id/sq_4x4_plus"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="1"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <com.mailpix.samedayphoto.imagesources.SizeQuantityButton
                        android:id="@+id/sq_4x4_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/sq_4x4_qty"
                        android:background="#00ffffff"
                        android:padding="5dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/textView4x4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Glossy 4x4"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Row 2 - 1 -->
            <LinearLayout
                android:id="@+id/sq_row_8x8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/layout_2_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mailpix.samedayphoto.imagesources.SizeQuantityButton
                        android:id="@+id/sq_8x8_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="#00ffffff"
                        android:padding="5dp"
                        android:src="@drawable/plus" />

                    <TextView
                        android:id="@+id/sq_8x8_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_toStartOf="@+id/sq_8x8_plus"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="1"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <com.mailpix.samedayphoto.imagesources.SizeQuantityButton
                        android:id="@+id/sq_8x8_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/sq_8x8_qty"
                        android:background="#00ffffff"
                        android:padding="5dp"
                        android:src="@drawable/minus" />

                    <TextView
                        android:id="@+id/textView8x8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Glossy 8x8"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </RelativeLayout>
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
    </LinearLayout>

</LinearLayout>